- show_item = local_assigns[:show_item] unless show_item

= form_for show_item do |form_object|
  = page_title_field

  = form_object.label(show_item.aliased.class.model_name.human)
  = link_to(show_item.aliased.name, show_item.aliased, target: "_blank")

  %br/
  %br/
  = form_object.label(:alias)
  = form_object.label(:alias, show_item.alias)