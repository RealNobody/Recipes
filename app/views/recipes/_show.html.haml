.tabbable.recipe-admin-tabs
  %ul.nav.nav-tabs.recipe-nav-tabs
    %li.active
      = link_to I18n.t("admin.recipe.tabs.recipe"), "#recipe", data: { toggle: "tab" }
    %li
      = link_to I18n.t("admin.recipe.tabs.free_form"), "#free-form", data: { toggle: "tab" }
    %li
      = link_to I18n.t("admin.recipe.tabs.edit"), "#edit", data: { toggle: "tab" }
    %li
      = link_to I18n.t("admin.recipe.tabs.aliases"), "#aliases", data: { toggle: "tab" }

  = page_title_field

  .tab-content.recipe-admin-tab-content
    #recipe.tab-pane.active
      .recipe-tab-content
        = render partial: "view", layout: false, locals: { show_item: @recipe }

    #edit.tab-pane
      .recipe-tab-content
        = render partial: "edit", layout: false

    #free-form.tab-pane
      .recipe-tab-content
        = render partial: "free_form", layout: false

    #aliases.tab-pane
      .recipe-tab-content
        - if @recipe.search_aliases.first
          = render(partial: "full_page",
          layout: "scrollable_list/scrolling_list",
          locals: { scroll_list_class: "scrolling-list-related",
          model_class:                 SearchAlias,
          list_item:                   @recipe.search_aliases.first,
          list_page:                   @recipe.search_aliases.index_sort.page(1),
          list_params:                 { page: 1 },
          show_path:                   "search_aliases/tab_show",
          list_content_name:           :search_alias_scroll_list,
          item_content_name:           :search_alias_item,
          list_parent_object:          @recipe,
          list_parent_relationship:    :search_aliases })
        -else
          No Aliases
          %br/