.tabbable.recipe-admin-tabs
  %ul.nav.nav-tabs.recipe-nav-tabs
    %li.active
      = link_to I18n.t("admin.recipe_type.tabs.recipe_type"), "#recipe_type", data: { toggle: "tab"}
    %li
      = link_to I18n.t("admin.recipe_type.tabs.aliases"), "#aliases", data: { toggle: "tab" }
    %li>
      = link_to I18n.t("admin.recipe_type.tabs.recipes"), "#recipes", data: { toggle: "tab" }

  .tab-content.recipe-admin-tab-content
    #recipe_type.tab-pane.active
      .recipe-tab-content
        = render partial: "recipe_type", layout: false

    #aliases.tab-pane
      .recipe-tab-content
        - if @recipe_type.search_aliases.first
          = render(partial: "full_page",
          layout: "scrollable_list/scrolling_list",
          locals: { scroll_list_class: "scrolling-list-related",
          model_class:                 SearchAlias,
          list_item:                   @recipe_type.search_aliases.first,
          list_page:                   @recipe_type.search_aliases.index_sort.page(1),
          list_params:                 { page: 1 },
          show_path:                   "search_aliases/tab_show",
          list_content_name:           :search_alias_scroll_list,
          item_content_name:           :search_alias_item,
          list_parent_object:          @recipe_type,
          list_parent_relationship:    :search_aliases })
        -else
          No Aliases
          %br/

    #recipes.tab-pane
      .recipe-tab-content
        - if @recipe_type.recipes.first
          .recipe-tab-content
            = render(partial: "full_page",
            layout: "scrollable_list/scrolling_list",
            locals: { scroll_list_class: "scrolling-list-related",
            model_class:                 Recipe,
            list_item:                   @recipe_type.recipes.first,
            list_page:                   @recipe_type.recipes.index_sort.page(1),
            list_params:                 { page: 1 },
            show_path:                   "recipes/tab_show",
            list_content_name:           :recipe_scroll_list,
            item_content_name:           :recipe_item,
            list_parent_object:          @recipe_type,
            list_parent_relationship:    :recipes })
        - else
          No Recipes
          %br/