- list_item = local_assigns[:list_item] unless list_item
- list_page = local_assigns[:list_page] unless list_page
- list_params = local_assigns[:list_params] unless list_params
- list_parent_object = local_assigns[:list_parent_object] unless list_params
- list_parent_relationship = local_assigns[:list_parent_relationship] unless list_params

- prev_element = scrolling_list_previous_link(list_page,
list_item,
list_params[:page],
list_params[:per_page],
list_item.class.default_per_page,
list_params[:search],
list_parent_object,
list_parent_relationship)
- unless (prev_element.blank?)
  - prev_link = prev_element.match(/href=\"(.*?)\"/)[1];

- next_element = scrolling_list_next_link(list_page,
list_item,
list_params[:page],
list_params[:per_page],
list_item.class.default_per_page,
list_params[:search],
list_parent_object,
list_parent_relationship)
- unless (next_element.blank?)
  - next_link = next_element.match(/href=\"(.*?)\"/)[1];


- unless prev_element.blank?
  .scrolling-previous
    = prev_element

- list_page.each do |page_item|
  = scrolling_list_link_to_item("#{scroll_list_name(page_item)}",
  page_item,
  list_page,
  list_item,
  list_params[:page],
  list_params[:per_page],
  list_item.class.default_per_page,
  list_params[:search],
  list_parent_object,
  list_parent_relationship)

-#= scrolling_list_page_break prev_link, next_link

- unless next_element.blank?
  .scrolling-next
    = next_element